<?xml version ="1.0" encoding="UTF-8"?>


<!-- definire i seguenti elementi
    - elemento root: TEI
    - elementi figli: header (obbligatorio una occorrenza), 
    facsimile (opzionale una occorrenza), text (obbligatorio almeno una occorrenza)
    Gli elementi header, facsimile e text hanno tutti un content model testuale -->
    
<!DOCTYPE TEI [
    <!ELEMENT TEI (header, facsimile?, text+) > <!-- elemento root TEI con dichiarazione degli elementi con i modificatori-->
    <!ELEMENT header (#PCDATA)> <!-- gli elementi hanno tutti i content model testuale -->
    <!ELEMENT facsimile (#PCDATA)>
    <!ELEMENT text (#PCDATA)>
]>